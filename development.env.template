MEDIA_PORT=8080
MEDIA_DIRECTORY="/web/morphobank/media"
MEDIA_APP="morphobank3"

DATACITE_USERNAME="user"
DATACITE_PASSWORD="password"
DATACITE_SHOULDER="sho.uld"
DATACITE_HOSTNAME="hostname"
