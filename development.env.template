ORCID_DOMAIN=https://sandbox.orcid.org
# ORCID API domain (Member API) - used for all ORCID API calls
# Requires ORCID membership ($3,700/year via Lyrasis)
# For sandbox testing: https://api.sandbox.orcid.org
# For production: https://api.orcid.org
ORCID_API_DOMAIN="https://api.sandbox.orcid.org"
ORCID_CLIENT_ID={id}
ORCID_CLIENT_SECRET={secret}
# Enable ORCID Works feature (pushing projects to user ORCID profiles on publish)
# Requires: credentials registered for /activities/update scope
ORCID_WORKS_ENABLED=true
# ORCID_CLIENT_ACCESS_TOKEN is generated by client id and secret and is valid for 20 years
# we can use the command below to get a new one
# curl -i -d 'client_id={id}' -d 'client_secret={secret}' \
# -d 'scope=/read-public' -d 'grant_type=client_credentials' 'https://sandbox.orcid.org/oauth/token'
ORCID_CLIENT_ACCESS_TOKEN={token}
# To achieve a successful connection, mb4-web and mb4-service need to be proxied the same domain
# Domain here need to be the proxied domain
ORCID_REDIRECT_URL=http://{domain}/users/auth

AWS_REGION="us-west-2"
AWS_ACCESS_KEY_ID={access_key_id}
AWS_SECRET_ACCESS_KEY={secret_access_key}

